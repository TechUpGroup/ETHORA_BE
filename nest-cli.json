{
  "language": "ts",
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "**/*.gql",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"]
  }
}
